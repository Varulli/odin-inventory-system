extends layout 

block content 
  h1= title 

  if publisher_games.length
    h2 This publisher will be removed from these games:
    dl
      each game in publisher_games
        dt
          a(href=game.url) #{game.name}
        dd #{game.description}

  p.delete-message Are you sure you want to delete this publisher?

block actions
  form(method='POST')
    button.delete(type='submit') Delete Publisher